# Teams Bot Environment Configuration
# Copy this file to .env and update with your values

# Bot Configuration
MicrosoftAppId=your-bot-app-id
MicrosoftAppPassword=your-bot-app-password
MicrosoftAppType=MultiTenant
MicrosoftAppTenantId=your-tenant-id

# Server Configuration
PORT=3978
NODE_ENV=development

# API Configuration
SDR_API_BASE_URL=http://localhost:7071/api
SDR_API_VERSION=v1
SDR_API_TIMEOUT=30000

# Authentication
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id
KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# Bot Features
ENABLE_PROACTIVE_MESSAGING=true
ENABLE_ADAPTIVE_CARDS=true
ENABLE_COMMAND_HELP=true
ENABLE_ANALYTICS=true

# Logging
LOG_LEVEL=debug
ENABLE_CONSOLE_LOGGING=true
ENABLE_FILE_LOGGING=false
LOG_FILE_PATH=./logs/bot.log

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=300
REDIS_CONNECTION_STRING=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=30
RATE_LIMIT_REQUESTS_PER_HOUR=500

# Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key;IngestionEndpoint=https://eastus-8.in.applicationinsights.azure.com/

# Teams App Configuration
TEAMS_APP_ID=your-teams-app-id
TEAMS_APP_BASE_URL=https://your-bot-domain.azurewebsites.net