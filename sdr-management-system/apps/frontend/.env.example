# Frontend Environment Configuration
# Copy this file to .env.local and update with your values

# API Configuration
VITE_API_BASE_URL=http://localhost:7071/api
VITE_API_VERSION=v1

# Authentication
VITE_AUTH_CLIENT_ID=your-azure-client-id
VITE_AUTH_TENANT_ID=your-azure-tenant-id
VITE_AUTH_REDIRECT_URI=http://localhost:3000

# Application Configuration
VITE_APP_TITLE="SDR Management System"
VITE_APP_DESCRIPTION="Small Development Request Management"
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_DEBUG_LOGGING=true

# External Services
VITE_TEAMS_APP_ID=your-teams-app-id
VITE_STORAGE_ACCOUNT_URL=https://your-storage-account.blob.core.windows.net

# Analytics (optional)
VITE_APPLICATION_INSIGHTS_CONNECTION_STRING=your-connection-string